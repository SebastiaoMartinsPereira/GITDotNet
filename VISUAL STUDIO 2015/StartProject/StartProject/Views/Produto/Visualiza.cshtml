
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Visualiza</title>
</head>
<body>
    <div> 
        Id : @ViewBag.Produto.Id<br/>
        Nome : @ViewBag.Produto.Nome<br />
        Categoria : @ViewBag.Produto.Categoria.Nome<br />
        Preço : @ViewBag.Produto.Preco<br />
        Descrição : @ViewBag.Produto.Descricao<br />
        Quantidade : @ViewBag.Produto.Quantidade<br />
        <label>
            Categoria:
            @if (@ViewBag.Categorias != null)
            {
                <input type="text" name="@ViewBag.produto.CategoriaID" value="@ViewBag.Categorias.Count" />
            }
            else {
                <input type="text" name="produto.CategoriaID" />
            }
        </label>
        @*a duas formas geram linkes sendo que a segunda pega o nome criado  na anotacao Routes[Name=="algo"]*@
        @*@Html.ActionLink("Voltar","Index")*@
        @Html.RouteLink("Voltar","ListaProdutos")
    </div>
</body>
</html>
